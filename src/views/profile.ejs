<%- include ("./partials/_header") %>


<div class = "container">
    <div class = "row">
        <div class = "col-md-5">
            <div class = "card">
                <div class = "card-body">
                    <table class = "table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Username</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td> <strong> <%= user.username %>   </strong> </td>
                            </tr>
                        </tbody>
                        <!--AGREGAR LO NECESARIO PARA PONER EL NOMBRE DEL USUARIO-->
                    </table>
                    <a href=/check/<%=user._id%>  class="btn btn-primary" href="turn"> Home </a>
                </div>
            </div>
            <div class = "col-md-4">
                <div class = "row-md-5">
                    <h3>Suggestions</h3>
                </div>
                <table class = "table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Genre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% l = Math.floor(Math.random() * user.likedGames.length)%>
                        <% console.log("L", l); %>
                        <% console.log(user.likedGames[l].genre); %>
                        <% g = user.likedGames[l].genre%>
                        <% console.log("G", g); %>
                        <% for(var x = 0; x < videogames.length; x++) { %>
                            <% if(g == videogames[x].genre) {%>
                                <% if(videogames[x].title != user.likedGames[l].title) { %>
                                <tr>
                                    <td> <strong> <%= videogames[x].title %>   </strong> </td>
                                    <td>  <%= videogames[x].description %> </td>
                                    <td>  <%= videogames[x].genre %> </td>
                                </tr>
                                <% } %>
                            <% }%>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class = "col-md-6">
            <div class = "row-md-5">
                <h1>Favorites</h1>
            </div>
            <table class = "table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Genre</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < user.likedGames.length; i++)  {     %>
                        <tr>
                            <td> <strong> <%= user.likedGames[i].title %>   </strong> </td>
                            <td>  <%= user.likedGames[i].description %> </td>
                            <td>  <%= user.likedGames[i].genre %> </td>
                            <td>
                                <a href=/delete/<%=user._id%>&<%=user.likedGames[i]._id%>  class="btn btn-danger">Delete </a>
                            </td>
                        </tr>
                        <%  }  %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ("./partials/_footer") %>