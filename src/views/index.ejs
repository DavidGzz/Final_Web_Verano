<%- include ("./partials/_header") %>
<div class = "container">
    <div class = "col">
        <div class = "row-md-5">
            <div class = "card">
                <div class = "card-body">
                    <form action = "/add" method = "post">
                        <div class = "form-group">
                            <input class = "form-control" type = "text" name = "title" placeholder = "Title">
                        </div>
                        <div class = "form-group">
                            <input class = "form-control" type = "text" name = "description" placeholder = "Description">
                        </div>
                        <div class = "form-group">
                            <input class = "form-control" type = "text" name = "genre" placeholder = "Genre">
                        </div>
                        <button class = "btn btn-primary" type = "submit">
                            Add
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <h2> <% console.log(`INDEX ${user}`)%></h2>
        <h1> WELCOME: <% user %></h1>
        <div class = "row-md-7">
            <table class = "table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Genre</th>
                        <th>Favorites</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < videogames.length; i++)  {     %>
                        <tr>
                            <td> <strong> <%= videogames[i].title %>   </strong> </td>
                            <td>  <%= videogames[i].description %> </td>
                            <td>  <%= videogames[i].genre %> </td>
                            <td>
                                <a class = "btn btn-dark" href = "" action = /fav method = "post"> Add </a>
                                <!--SOLO PARA ADMINISTRADOR-->
                                <!--<a href=/delete/ videogames[i]._id   class="btn btn-danger" href="turn">Delete </a>-->
                            </td>
                        </tr>
                    <%  }  %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ("./partials/_footer") %>